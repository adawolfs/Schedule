<resources>

    <style name="Property_Price" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/property_title</item>
    </style>

    <style name="Property_Type" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/property_text_color</item>
    </style>

    <style name="Property_Category" parent="TextAppearance.AppCompat.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/category_background</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">@color/category_text_color</item>
    </style>

    <style name="Property_Icon">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:shadowDx">13</item>
        <item name="android:shadowDy">13</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/property_text_color</item>
    </style>

    <style name="Property_Icon_Group">
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Property_Address" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/property_text_color</item>
    </style>

    <style name="Property_Description" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">@color/property_text_color</item>
    </style>
</resources>
